<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_loading_bg"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/view_loading_circular"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/ll10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sk_loading"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ll10"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/bgcolor_loading_accent" />

        <TextView
            android:id="@+id/tv_loading_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/sk_loading"
            android:layout_centerHorizontal="true"
            android:text="@string/text_loading"
            android:textColor="@color/fontcolor_common" />

        <!--<TextView-->
        <!--android:id="@+id/message"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:text="@string/text_loading"-->
        <!--android:textColor="@color/fontcolor_common" />-->
    </LinearLayout>
</RelativeLayout>

