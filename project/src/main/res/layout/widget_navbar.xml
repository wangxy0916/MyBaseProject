<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_navbar"
                style="@style/CommonTitle">

    <RelativeLayout
        android:id="@+id/rl_navbar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_navbar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/ic_titlebar_back"
            android:drawablePadding="@dimen/qb_px_7"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/fontcolor_white"
            android:textSize="@dimen/fontsize_eighteenth"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_navbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_navbar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:focusable="true"
            android:textColor="@color/fontcolor_white"
            android:textSize="@dimen/fontsize_sixteen"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_navbar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_titlebar_add"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_navbar_centre"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_navbar_centre"
            style="@style/CommonTitleText"/>

        <ImageView
            android:id="@+id/iv_navbar_centre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_navbar_centre"
            android:visibility="gone" />
    </RelativeLayout>


    <View
        android:id="@+id/view_navbar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rl_navbar_left"/>
</RelativeLayout>